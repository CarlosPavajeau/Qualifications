<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_5">
        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/subject_item_image"
                android:src="@drawable/ic_baseline_subject">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_5">
            <TextView
                android:id="@+id/subject_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/subject_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subject_item_code">
            </TextView>
            <TextView
                android:id="@+id/subject_qualifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subject_qualifications_item">
            </TextView>
            <TextView
                android:id="@+id/subject_definitive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subject_definitive_item">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/subject_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit"
                android:layout_gravity="center_vertical">
            </ImageButton>
            <ImageButton
                android:id="@+id/subject_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete"
                android:layout_gravity="center_vertical">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>